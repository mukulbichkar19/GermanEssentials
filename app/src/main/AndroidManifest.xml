<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.germanessentials">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NumbersActivity"
            android:label="Numbers"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ColorsActivity"
            android:label="Colors"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MathsSymbols"
            android:label="Maths Symbols"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".DaysActivity"
            android:label="Days of the Week"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".TimesActivity"
            android:label="Times of the Day"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".MonthsActivity"
            android:label="Months"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".CountriesActivity"
            android:label="Countries"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".Family_MembersActivity"
            android:label="Family Members"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".CommonWordsActivity"
            android:label="Common Words"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>